<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/all_rounded_corner_dialog"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="334dp"
           android:gravity="center_vertical"
            android:orientation="vertical">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/iv_loader"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/progress_loader"
                app:lottie_loop="true" />


            <TextView
                android:id="@+id/message_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                style="@style/TextAppearance.Medium.20sp"
                android:text="@string/loading"
                android:textAlignment="center"
                android:textColor="#111111"
                android:layout_marginHorizontal="@dimen/_60dp"
                android:layout_marginBottom="@dimen/_65dp"
             />
        </LinearLayout>


</RelativeLayout>